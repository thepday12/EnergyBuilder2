<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="edv2.energybuilder">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"

        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.MainActivity"
            android:theme="@style/MainTheme">
        </activity>
        <activity
            android:name=".view.SplashActivity"
            android:theme="@style/SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".view.LoginActivity"
            android:label="@string/login_label">
        </activity>
        <activity
            android:name=".view.SettingsActivity"
            android:label="@string/setting_label">
        </activity>
        <activity
            android:name=".view.RoutesActivity"
            android:label="@string/routes_label">
        </activity>
        <activity android:name=".view.PointsActivity"/>
        <activity android:name=".view.DeatailPointActivity"/>
        <activity android:name=".view.UpdateObjectActivity" android:windowSoftInputMode="stateHidden">
        </activity>
    </application>

</manifest>